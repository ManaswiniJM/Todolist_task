{
  "info": {
    "name": "Todo List API",
    "_postman_id": "todolist-api-collection",
    "description": "Postman collection for Todo List API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\":\"test2@example.com\",\n    \"password\":\"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\":\"test2@example.com\",\n    \"password\":\"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer <token>" }
            ],
            "url": "http://localhost:3000/api/tasks",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Buy Novel\",\n  \"description\": \"The Silent Patient\",\n  \"dueDate\": \"2025-09-01\",\n  \"category\": \"Shopping\"\n}"
            }
          }
        },
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks"
          }
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/:id"
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/:id"
          }
        }
      ]
    },
    {
      "name": "Task Status",
      "item": [
        {
          "name": "Mark Pending",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/:id/markPending"
          }
        },
        {
          "name": "Mark Completed",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/:id/markCompleted"
          }
        }
      ]
    },
    {
      "name": "Task Categorization",
      "item": [
        {
          "name": "Get by Category (Shopping)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/category/Shopping"
          }
        },
        {
          "name": "Get by Category (Personal)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/category/Personal"
          }
        }
      ]
    },
    {
      "name": "Search & Filtering",
      "item": [
        {
          "name": "Search Task (sing)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/search?q=sing"
          }
        },
        {
          "name": "Search Task (Buy)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer <token>" }],
            "url": "http://localhost:3000/api/tasks/search?q=Buy"
          }
        }
      ]
    }
  ]
}
